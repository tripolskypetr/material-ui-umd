{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "classic",
    "jsx": "react",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "lib": ["es2018", "dom"],
    "outFile": "./dist/mobx-app.js",
    "rootDir": "./src/",
    "baseUrl": "./",
    "types": [],
    "typeRoots": [
      "../../lib/router-tools/dist",
      "../../lib/form-tools/dist",
      "../../type",
      "../../dist",
    ],
  },
  "exclude": [
    "../../node_modules/@types/",
    "../../node_modules/**/*",
    "./dist/*",
  ],
  "include": [
    "../../lib/router-tools/dist",
    "../../lib/form-tools/dist",
    "../../type",
    "../../dist",
    "./src",
  ],
}
